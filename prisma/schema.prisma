generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id
  username      String
  discriminator String
  avatar        String?
  admin         Boolean @default(false)
  bots          Bot[]
}

model Bot {
  id        String @id
  username  String
  avatarURL String
  website String?
  git String?
  support String?
  owner     User[]
  categories Category[]
  libraryID String
  library Library @relation(fields: [libraryID], references: [id])
  approved Boolean @default(false)
}

model Category {
  id String @id
  name String
  bots Bot[]
}

model Library {
  id String @id
  name String
  bots Bot[]
}

